    <script> 
        let input = prompt("Nhập vào dãy số bất kỳ (các số cách nhau bằng dấu cách):");

        let arr = input.split(" ").map(Number);

        let maxNumber = Math.min(...arr);

        alert("Phần tử nhỏ nhất trong mảng là: " + maxNumber);

    </script>
