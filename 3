<body>
    <script> 
        const input = prompt("Nhập vào dãy số bất kỳ (các số cách nhau bằng dấu cách):");

        const arr = input.split(" ");

        const reversedArr = arr.reverse();

        alert("Mảng sau khi đảo ngược: " + reversedArr.join(", "));
        document.write("Mảng sau khi đảo ngược:", reversedArr);

    </script>
</body>
